@model Acupunctuur.Models.ValidViewModel

<h2 class="display-4 text-center">Wachtwoord wijzigen</h2>

<div class="w-75 mx-auto">
    @{
        if (Model.Error == 1) {
            <p class="text-danger text-center">Oud wachtwoord is incorrect</p>
        }
    }

    @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row mt-3">
                <div class="col-4 px-0"></div>
                <div class="col-4 px-0">
                    <input class="w-100" type="password" id="oldPassword" name="oldPassword" placeholder="Oud wachtwoord" autofocus/>
                </div>
                <div class="col-4 px-0">
                    <span class="ml-2 text-nowrap text-danger" id="oldPasswordError"></span>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-4 px-0"></div>
                <div class="col-4 px-0">
                    <span class="text-secondary">
                        <small>Wachtwoord eisen:</small>
                    </span>
                    <ul class="my-auto text-secondary">
                        <li><small>Maximaal 64 karakters</small></li>
                        <li><small>Minimaal 1 letter</small></li>
                        <li><small>Speciale tekens: alleen @@#$%!&* toegestaan</small></li>
                    </ul>
                </div>
                <div class="col-4 px-0"></div>
            </div>
            <div class="row mt-1">
                <div class="col-4 px-0"></div>
                <div class="col-4 px-0">
                    <input class="w-100" type="password" id="password1" name="password" placeholder="Wachtwoord" />
                </div>
                <div class="col-4 px-0">
                    <span class="ml-2 text-nowrap text-danger" id="passwordError"></span>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-4 px-0"></div>
                <div class="col-4 px-0">
                    <input class="w-100" type="password" id="password2" placeholder="Wachtwoord herhalen" />
                </div>
                <div class="col-4 px-0"></div>
            </div>
            <div class="row mt-1">
                <div class="col-4 px-0"></div>
                <div class="col-4 px-0 text-center">
                    <input type="submit" id="submit" value="Wijzigen" />
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script src="~/js/ChangePassword.js" type="text/javascript"></script>
}