@model Acupunctuur.Models.PageViewModel

<h2 class="display-4 text-center">Klant zoeken</h2>

<div class="w-50 mx-auto">
    <div class="mt-3 w-75 mx-auto">
        <span>Het is mogelijk om te zoeken op voornaam, achternaam, emailadres of telefoonnummer.</span>
    </div>
    <div class="container mt-2">
        <div class="row w-50 mx-auto">
            <div class="col-9 px-0">
                <input class="w-100" type="text" id="queryField" name="query" placeholder="Zoektermen" autofocus />
            </div>
            <div class="col-3 pl-1 text-center">
                <input type="submit" id="submit" value="Zoeken" />
            </div>
        </div>
    </div>
    <div class="mt-2 text-center">
        <table class="table table-bordered w-100 mx-auto" id="searchResults">
        </table>
        <span id="noResults" style="display:none">Geen resultaten</span>
    </div>
</div>

@section scripts {
    <script src="~/js/ClientSearch.js" type="text/javascript"></script>
}
